<%= form_tag project_search_path, method: 'get' do %>
  <div class="input-group">
    <%= text_field_tag('q', @q,
                       placeholder: 'Search datasets', class: 'form-control') %>
    <div class=input-group-append>
      <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
        <%= fa_icon(:search) %>
      <% end %>
    </div>
  </div>
<% end  %>
